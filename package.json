{
  "name": "nestjstemplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "kill": "lsof -ti:3000 | xargs kill -9 2>/dev/null || echo 'No process running on port 3000'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit generate && ts-node -r tsconfig-paths/register drizzle/migrate.ts",
    "db:seed": "ts-node -r tsconfig-paths/register drizzle/seed/index.ts",
    "db:seed:emp": "ts-node -r tsconfig-paths/register drizzle/seed/seed-emp.ts",
    "db:seed:users": "ts-node -r tsconfig-paths/register drizzle/seed/seed-users.ts",
    "db:reset": "ts-node -r tsconfig-paths/register drizzle/reset.ts",
    "db:export": "ts-node -r tsconfig-paths/register drizzle/backup/export.ts",
    "db:export:structure": "ts-node -r tsconfig-paths/register drizzle/backup/export-structure.ts",
    "db:export:data": "ts-node -r tsconfig-paths/register drizzle/backup/export-data.ts",
    "db:import": "ts-node -r tsconfig-paths/register drizzle/backup/import.ts",
    "dock": "docker-compose up -d",
    "setup": "npm run db:reset && npm run db:migrate && npm run db:seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^11.1.10",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.10",
    "@nestjs/platform-express": "^11.1.10",
    "@nestjs/swagger": "^11.2.3",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "mysql2": "^3.16.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
